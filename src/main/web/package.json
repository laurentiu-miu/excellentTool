    "devDependencies": {
        "gulp": "^3.9.1",
        "gulp-cli": "^1.2.1",
        "gulp-autoprefixer": "3.1.0",
        "gulp-sass": "^2.2.0",
        "gulp-typescript": "2.12.2",
        "del": "2.2.0",

        "typescript": "^1.8.9",
        "typings": "^0.7.9",

        "jasmine-core": "2.4.1",

        "concurrently": "^2.0.0",
        "lite-server": "^2.2.0"
