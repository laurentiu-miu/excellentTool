{
    "name": "spring-boot-angular2",
    "description": "Spring Boot with Angular2, Typescript, Sass, and a Gulp Build",
    "private": true,
    "version": "0.0.1-SNAPSHOT",
    "license": "MIT",

    "scripts": {
        "postinstall": "npm run typings install",
        "tsc": "tsc",
        "tsc:w": "tsc -w",
